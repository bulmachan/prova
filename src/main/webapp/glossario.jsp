                        <tbody>
                          <tr>
                            <td headers="pr01">Molto scarsa</td>
                            <td headers="pr02">&lt;20</td>
                            <td headers="pr03">&lt;15-25</td>
                          </tr>
                          <tr>
                            <td headers="pr01">Scarsa</td>
                            <td headers="pr02">25-50</td>
                            <td headers="pr03">da 15-25 a 40-60</td>
