                      <td headers="pe02">moderatamente lenta</td>
                      <td headers="pe03" rowspan="2">media</td>
                    </tr>
                    <tr>
                      <td headers="pe01">0,35-3,5</td>
                      <td headers="pe02">moderata</td>
                    </tr>
                    <tr>
                      <td headers="pe01">3,5-35</td>
                      <td headers="pe02">alta</td>
                      <td headers="pe03" rowspan="2">elevata</td>
                    </tr>
                    <tr>
                      <td headers="pe01">&gt;35</td>
